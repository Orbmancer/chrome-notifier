{
  "manifest_version": 2,

  "name": "Chrome Notifier",
  "description": "Let chrome notify you when changes happen on elements you track",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
   {
    "matches": ["<all_urls>"],
    "js": ["jquery-3.1.0.min.js", "lib.js", "observer.js"]
   }
 ],
  "permissions": [
    "notifications",
    "background",
    "storage"
  ],
  "options_page": "options.html"
}
